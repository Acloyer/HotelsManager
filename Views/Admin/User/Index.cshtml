@model IEnumerable<HotelsManager.Models.Users.User>
@{
    ViewData["Title"] = "Список пользователей";
}

<h2>@ViewData["Title"]</h2>
<p>
    <button type="button" class="btn btn-outline-success" onclick="location.href='@Url.Action("CreateUser", "Admin")'">Создать пользователя</button>
</p>
<table class="table">
    <tr>
        <th>Id</th>
        <th>Имя</th>
        <th>Пароль</th>
        <th>Управление</th>
    </tr>

    @foreach (var item in Model)
{
    <tr>
        <td>@item.Id</td>
        <td>@item.Name</td>
        <td>@item.Password</td>

        <td>
            @{
                string id1 = (item.Id).ToString();
            }
            <button type="button" class="btn btn-outline-primary" onclick="location.href='@Url.Action("EditUser", "Admin", new { id = id1})'">Изменить</button> @*<b>|</b>*@
            @*<button type="button" class="btn btn-outline-danger" onclick="location.href='@Url.Action("DeleteUser", "Admin", new { id = id1})'">Удалить</button>*@
        </td>
    </tr>
}
</table>
