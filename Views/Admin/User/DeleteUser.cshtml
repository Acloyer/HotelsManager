@model HotelsManager.Models.Users.User
@{
    ViewData["Title"] = "Удаление пользователя";
}
<h2>@ViewBag.Title</h2>
<div>
    <dl class="dl-horizontal">
        <dt>Имя</dt>
        <dd>
            @Model.Name
        </dd>

        <dt>Пароль</dt>
        <dd>
            @Model.Password
        </dd>
    </dl>

    <div>
        <form asp-controller="Admin" asp-action="DeleteUser" method="post">
            <div class="form-group">
                <button type="submit" class="btn btn-outline-danger m-3 ms-0" value="Удалить">Удалить</button>
            </div>
        </form>
        @{
            string id1 = (@Model.Id).ToString();
        }
        <button type="button" class="btn btn-outline-secondary" onclick="location.href='@Url.Action("EditUser", "Admin", new { id = id1})'">Вернуться к редактированию</button>
        <br />
        <br />
        <button type="button" class="btn btn-outline-info" onclick="location.href='@Url.Action("UserList", "Admin")'">Вернуться к списку пользователей</button>
    </div>
</div>